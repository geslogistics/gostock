<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fitsSystemWindows="true"
    tools:context=".HomeActivity">

    <LinearLayout
        android:id="@+id/main_page_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginEnd="16dp"
            android:drawablePadding="8dp"
            android:text="GoStock"
            android:textColor="@color/primary_text_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_gesblack"
            app:drawableTint="@color/primary_text_dark" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_logged_in_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:clickable="true"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="Welcome, User!"
            android:textColor="@color/primary_text_dark"
            android:textSize="16sp"
            app:drawableEndCompat="@drawable/ic_user_icon"
            app:drawableTint="@color/primary_text_dark" />

    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            >

            <LinearLayout
                android:id="@+id/ll_welcome_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_welcome_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="ðŸ‘‹ðŸ¾ Hello User!"
                    android:textAlignment="viewStart"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/primary_text_dark"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_welcome_small_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Here's your stocktaking progress so far."
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </LinearLayout>
            <!-- START Batch Summary Section -->

            <LinearLayout
                android:id="@+id/ll_batch_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:padding="16dp"
                android:background="@drawable/rounded_bg"
                android:backgroundTint="#1A000000">

                <TextView
                    android:id="@+id/tv_batch_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŸ¢  Batch started on 18/10/2024 05:38 PM"/>

            </LinearLayout>

            <!-- END Batch Summary Section -->


            <!-- NEW: Dashboard Section -->
            <LinearLayout
                android:id="@+id/ll_dashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp"
                    android:paddingVertical="16dp"
                    android:background="@drawable/rounded_bg"
                    android:backgroundTint="#1A000000"
                    android:layout_weight="1">

                    <!-- Batch Size Progress -->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <ProgressBar
                            android:id="@+id/pb_batch_size"
                            android:layout_centerInParent="true"
                            style="@style/CircularProgressBar"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:max="100"
                            android:progress="0"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_batch_size_progress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:text="123"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:textColor="@color/primary_text_dark" />

                            <TextView
                                android:id="@+id/tv_max_batch_size"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="/ 200"
                                android:textSize="15sp"
                                android:textAlignment="center"
                                android:textColor="@android:color/darker_gray" />

                        </LinearLayout>


                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Batch Counter"
                        android:textSize="14sp"
                        android:textColor="@color/primary_text_dark" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp"
                    android:paddingVertical="16dp"
                    android:background="@drawable/rounded_bg"
                    android:backgroundTint="#1A000000"
                    android:layout_weight="1">


                    <!-- Batch Time Progress -->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <ProgressBar
                            android:id="@+id/pb_batch_time"
                            android:layout_centerInParent="true"
                            style="@style/CircularProgressBar"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:max="100"
                            android:progress="0"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_batch_time_progress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:text="3h"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:textColor="@color/primary_text_dark" />

                            <TextView
                                android:id="@+id/tv_max_batch_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="/ 4h"
                                android:textSize="15sp"
                                android:textAlignment="center"
                                android:textColor="@android:color/darker_gray" />

                        </LinearLayout>

                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Batch Timer"
                        android:textSize="14sp"
                        android:textColor="@color/primary_text_dark" />
                </LinearLayout>
            </LinearLayout>
            <!-- END Dashboard Section -->

            <!-- START HDash Section -->

            <LinearLayout
                android:id="@+id/ll_hdash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_dashcard_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_bg"
                        android:backgroundTint="#1A000000"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Location"
                            android:textColor="@color/primary_text_dark"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Counted"
                            android:textColor="@color/primary_text_dark"
                            android:textSize="15sp"
                            android:textStyle="normal"/>

                        <TextView
                            android:id="@+id/tv_dashcard_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="48"
                            android:textColor="@color/primary_text_dark"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="8dp"
                        android:layout_height="0dp" />

                    <LinearLayout
                        android:id="@+id/ll_dashcard_sku"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_bg"
                        android:backgroundTint="#1A000000"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="NSN"
                            android:textColor="@color/primary_text_dark"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Counted"
                            android:textColor="@color/primary_text_dark"
                            android:textSize="15sp"
                            android:textStyle="normal"/>

                        <TextView
                            android:id="@+id/tv_dashcard_sku"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="48"
                            android:textColor="@color/primary_text_dark"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="8dp"
                        android:layout_height="0dp" />

                    <LinearLayout
                        android:id="@+id/ll_dashcard_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_bg"
                        android:backgroundTint="#1A000000"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Quantity"
                            android:textColor="@color/primary_text_dark"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Counted"
                            android:textColor="@color/primary_text_dark"
                            android:textSize="15sp"
                            android:textStyle="normal"/>

                        <TextView
                            android:id="@+id/tv_dashcard_quantity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="48"
                            android:textColor="@color/primary_text_dark"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- END HDash Section -->

            <!-- START Menu Button Secion -->

            <LinearLayout
                android:id="@+id/ll_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/btn_start_new_record"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:focusable="true"
                    android:clickable="true"
                    android:background="@drawable/rounded_bg_light"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Start"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/primary_text_dark" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Create a new batch and start stocktaking"
                            android:textColor="@color/primary_text_dark"
                            android:textSize="15sp"
                            android:textStyle="normal" />

                    </LinearLayout>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        app:srcCompat="@drawable/ic_add_icon"
                        app:tint="@color/primary_text_dark"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_menu_continue_batch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_bg_light"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Continue"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/primary_text_dark" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Continue stocktaking for the current batch"
                            android:textColor="@color/primary_text_dark"
                            android:textSize="15sp"
                            android:textStyle="normal" />

                    </LinearLayout>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        app:srcCompat="@drawable/ic_forward_icon"
                        app:tint="@color/primary_text_dark"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_edit_records"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:background="@drawable/rounded_bg_light"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Edit"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/primary_text_dark" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Modify or delete existing stocktaking entries"
                            android:textColor="@color/primary_text_dark"
                            android:textSize="15sp"
                            android:textStyle="normal" />

                    </LinearLayout>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        app:srcCompat="@drawable/ic_edit_icon"
                        app:tint="@color/primary_text_dark"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_export_records"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:background="@drawable/rounded_bg_light"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Export"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/primary_text_dark" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Export entries of the current batch"
                            android:textColor="@color/primary_text_dark"
                            android:textSize="15sp"
                            android:textStyle="normal" />

                    </LinearLayout>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        app:srcCompat="@drawable/ic_export_icon"
                        app:tint="@color/primary_text_dark"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_export_close"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:background="@drawable/rounded_bg_light"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Export &amp; Close"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/primary_text_dark" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Export entries and close the current batch"
                            android:textColor="@color/primary_text_dark"
                            android:textSize="15sp"
                            android:textStyle="normal" />

                    </LinearLayout>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        app:srcCompat="@drawable/ic_end_square_icon"
                        app:tint="@color/primary_text_dark"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_import_records"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:background="@drawable/rounded_bg_light"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Import"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/primary_text_dark" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Import stocktaking entries from file"
                            android:textColor="@color/primary_text_dark"
                            android:textSize="15sp"
                            android:textStyle="normal" />

                    </LinearLayout>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        app:srcCompat="@drawable/ic_import_icon"
                        app:tint="@color/primary_text_dark"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_bluetooth_connect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:background="@drawable/rounded_bg_light"
                    android:backgroundTint="@color/blue_500"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bluetooth"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Pair with other devices to sync data"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="normal" />

                    </LinearLayout>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        app:srcCompat="@drawable/ic_bluetooth_icon"
                        app:tint="@color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_manage_users"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:background="@drawable/rounded_bg_light"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Manage Users"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/primary_text_dark" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Create and modify users for the app"
                            android:textColor="@color/primary_text_dark"
                            android:textSize="15sp"
                            android:textStyle="normal" />

                    </LinearLayout>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        app:srcCompat="@drawable/ic_groups_icon"
                        app:tint="@color/primary_text_dark"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:background="@drawable/rounded_bg_light"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
