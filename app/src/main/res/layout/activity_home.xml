<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fitsSystemWindows="true"
    tools:context=".HomeActivity">

    <LinearLayout
        android:id="@+id/main_page_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginEnd="16dp"
            android:drawablePadding="8dp"
            android:text="GoStock"
            android:textColor="@color/primary_text_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_gesblack"
            app:drawableTint="@color/primary_text_dark" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_logged_in_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:clickable="true"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="Welcome, User!"
            android:textColor="@color/primary_text_dark"
            android:textSize="16sp"
            app:drawableEndCompat="@drawable/ic_user_icon"
            app:drawableTint="@color/primary_text_dark" />

    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48dp"
                android:gravity="center"
                android:text="Good Morning!\nBe Productive Today!"
                android:textColor="@color/primary_text_dark"
                android:textSize="36sp"
                android:textStyle="bold"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_start_new_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/button_background_light"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="@string/new_button_label"
                android:textColor="@color/primary_text_dark"
                android:textSize="15sp"
                app:cornerRadius="12dp" />

            <Button
                android:id="@+id/btn_edit_records"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/button_background_light"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="@string/edit_button_label"
                android:textColor="@color/primary_text_dark"
                android:textSize="15sp"
                app:cornerRadius="12dp" />

            <Button
                android:id="@+id/btn_export_records"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/button_background_light"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="@string/export_button_label"
                android:textColor="@color/primary_text_dark"
                android:textSize="15sp"
                app:cornerRadius="12dp" />

            <Button
                android:id="@+id/btn_export_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/button_background_light"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="@string/export_close_button_label"
                android:textColor="@color/primary_text_dark"
                android:textSize="15sp"
                app:cornerRadius="12dp" />

            <Button
                android:id="@+id/btn_import_records"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/button_background_light"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="@string/import_button_label"
                android:textColor="@color/primary_text_dark"
                android:textSize="15sp"
                app:cornerRadius="12dp" />


            <Button
                android:id="@+id/btn_bluetooth_connect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="Bluetooth"
                android:backgroundTint="@color/blue_500"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:visibility="visible"
                app:cornerRadius="12dp" />

            <Button
                android:id="@+id/btn_manage_users"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/button_background_light"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="@string/manage_users_button_label"
                android:textColor="@color/primary_text_dark"
                android:textSize="15sp"
                android:visibility="visible"
                app:cornerRadius="12dp" />

            <Button
                android:id="@+id/btn_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/button_background_light"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="Settings"
                android:textColor="@color/primary_text_dark"
                android:textSize="15sp"
                android:visibility="visible"
                app:cornerRadius="12dp" />

        </LinearLayout>

    </ScrollView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>