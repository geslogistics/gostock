<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:fitsSystemWindows="true"
    tools:context=".BluetoothActivity">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Bluetooth Device Pairing"
      android:textSize="24sp"
      android:textStyle="bold"
      android:layout_gravity="center_horizontal"
      android:layout_marginBottom="24dp"/>

  <TextView
      android:id="@+id/tv_bluetooth_status"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Bluetooth Status: Checking..."
      android:textSize="16sp"
      android:padding="8dp"
      android:background="#E0E0E0"
      android:layout_marginBottom="16dp"/>

  <Button
      android:id="@+id/btn_enable_bluetooth"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Enable Bluetooth"
      android:layout_marginBottom="16dp"
      android:visibility="gone"/>

  <Button
      android:id="@+id/btn_scan_devices"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Scan for Devices"
      android:layout_marginBottom="16dp"
      android:enabled="false"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Found Devices:"
      android:textSize="18sp"
      android:textStyle="bold"
      android:layout_marginBottom="8dp"/>

  <ListView
      android:id="@+id/lv_found_devices"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:background="#F0F0F0"
      android:padding="8dp"/>

</LinearLayout>