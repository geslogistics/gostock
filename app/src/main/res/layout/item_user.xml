<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/button_background_light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/user_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:id="@+id/rl_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/iv_username_label"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginVertical="3dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentStart="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_username_icon"
                app:tint="@android:color/darker_gray"
                />

            <TextView
                android:id="@+id/tv_username_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_username_label"
                android:text="Username"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_user_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_username_label"
                android:layout_marginTop="3dp"
                android:layout_marginStart="20dp"
                android:text="username"
                android:textColor="@color/primary_text_dark"
                android:textSize="12sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/iv_name_label"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginVertical="3dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentStart="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_user_icon"
                app:tint="@android:color/darker_gray"
                />

            <TextView
                android:id="@+id/tv_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_name_label"
                android:text="Name"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_user_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name_label"
                android:layout_marginTop="3dp"
                android:layout_marginStart="20dp"
                android:text="John Doe"
                android:textColor="@color/primary_text_dark"
                android:textSize="12sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_role_label"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginVertical="3dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentStart="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_group_icon"
                app:tint="@android:color/darker_gray"
                />

            <TextView
                android:id="@+id/tv_role_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_role_label"
                android:text="Role"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_user_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_role_label"
                android:layout_marginTop="3dp"
                android:layout_marginStart="20dp"
                android:text="Team Leader"
                android:textColor="@color/primary_text_dark"
                android:textSize="12sp"
                android:textStyle="bold" />

        </RelativeLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>


