<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="8dp"
    android:backgroundTint="@color/button_background_light"
    android:focusable="auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/user_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/user_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/rl_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_username_label"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginVertical="3dp"
                            android:layout_marginEnd="10dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_username_icon"
                            app:tint="@android:color/darker_gray" />

                        <TextView
                            android:id="@+id/tv_username_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Username"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_user_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="3dp"
                        android:text="username"
                        android:textColor="@color/primary_text_dark"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rl_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_name_label"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginVertical="3dp"
                            android:layout_marginEnd="10dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_user_icon"
                            app:tint="@android:color/darker_gray" />

                        <TextView
                            android:id="@+id/tv_name_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/iv_name_label"
                            android:text="Name"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_user_fullname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_name_label"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="3dp"
                        android:text="John Doe"
                        android:textColor="@color/primary_text_dark"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rl_role"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_role_label"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginVertical="3dp"
                            android:layout_marginEnd="10dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_group_icon"
                            app:tint="@android:color/darker_gray" />

                        <TextView
                            android:id="@+id/tv_role_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/iv_role_label"
                            android:text="Role"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_user_role"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_role_label"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="3dp"
                        android:text="Team Leader"
                        android:textColor="@color/primary_text_dark"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_reset_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_bg"
                    android:padding="5dp"
                    android:tint="@color/button_background_light"
                    app:srcCompat="@drawable/ic_reset_password_icon" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>


