<!-- res/layout/activity_main.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context="com.example.gostock.SubActivity"> <!-- Updated tools:context to your SubActivity -->

    <TextView
        android:id="@+id/scannedDataTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scanned Barcode Data Will Appear Here"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:background="#e0e0e0"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scanner Status: Unknown"
        android:textSize="14sp"
        android:padding="8dp"
        android:background="#f0f0f0"
        android:layout_marginBottom="24dp"
        android:gravity="center" />

    <Button
        android:id="@+id/softScanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trigger Soft Scan"
        android:padding="12dp"
        android:textSize="16sp"/>

</LinearLayout>
